@model IEnumerable<DataLayer.ShowCartViewModel>
@if (Model.Any())
{
    <div class="basket-header">
        <div class="basket-total">
            <span>مبلغ کل خرید:</span>
            <span>  @Model.Sum(s => s.Sum).ToString("#,0 ")</span>
            <span> تومان</span>
        </div>
        <a  href="/Orders/ShowOrder" class="basket-link">
            <span>مشاهده سبد خرید</span>
            <div class="basket-arrow"></div>
        </a>
    </div>
}
<ul class="basket-list">
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <li>
                <div href="#" class="basket-item">
                    <a asp-action="Delete" asp-controller="Orders" asp-route-id="@item.OrderDetailId" class="basket-item-remove"></a>
                    <div class="basket-item-content">
                        <div class="basket-item-image">
                            <img alt="" src="/ProductImages/@item.ImageName">
                        </div>
                        <div class="basket-item-details">
                            <div class="basket-item-title">
                                @item.Title
                            </div>
                            <div class="basket-item-params">
                                <div class="basket-item-props">
                                    <span>  @item.Count عدد</span>
                                    @if (item.Color != null)
                                    {
                                        <span>رنگ @item.Color</span>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        }
    }
    else
    {
       
                <div class="cart-empty-icon text-center mt-3">
                    <i class="now-ui-icons shopping_basket"></i>
                </div>
                <h5 style="" class="cart-empty-title">سبد خرید شما خالیست!</h5>

    }

</ul>
    @if (Model.Any())
    {
        <a href="/Orders/ShowOrder" class="basket-submit">ورود و ثبت سفارش</a>
    }


 