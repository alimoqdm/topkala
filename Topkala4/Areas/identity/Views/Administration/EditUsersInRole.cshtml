@model List<UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
 

        <div class="card m-3 text-right fontiran">
            <div class="card-header">
                <h4> حذف و اضافه کردن کاربران این نقش</h4>
            </div>
            <div class="card-body">

                <form method="get" asp-controller="Administration" asp-action="SerachUser">
                    <div class="input-group mb-3" dir="ltr" style="max-width:500px">
                        <input type="hidden" name="roleId" value="@roleId" />
                        <input id="Search" type="text" name="Search" class="form-control" placeholder="جستجو">
                        <div class="input-group-append">
                            <button class="btn btn-info" type="submit"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </form>

                <div>
                    <form method="post">
                        <ul class="list-group mb-3 " style="margin-right:-40px">


                            @for (int i = 0; i < Model.Count; i++)
                            {

                                <li class="list-group-item d-flex justify-content-between align-items-center flex-wrap " style="max-width:500px">
                                    <input type="hidden" asp-for="@Model[i].UserId" />
                                    <input type="hidden" asp-for="@Model[i].UserName" />
                                    <label asp-for="@Model[i].IsSelected">
                                        @Model[i].UserName
                                    </label>
                                    <span> <input asp-for="@Model[i].IsSelected" /></span>
                                </li>

                            }

                        </ul>


                        <input type="submit"  value="بروزرسانی" class="btn btn-primary"
                               style="width:auto" />
                        <a asp-action="EditRole" asp-route-id="@roleId"
                           class="btn btn-primary" style="width:auto">بازگشت</a>
                    </form>


                </div>
            </div>

        </div>
    
