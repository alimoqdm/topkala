@model DataLayer.ResetPasswordViewModel

@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper default">
    <div class="container">
        <div class="row">
            <div class="main-content col-12 col-md-7 col-lg-5 mx-auto">
                <div class="account-box">
                    <a href="#" class="logo">
                        <img src="assets/img/logo.png" alt="">
                    </a>
                    <div class="account-box-title">  تغییر رمز عبور </div>
                    <div class="account-box-content">
                        <form class="form-account " method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <input asp-for="Token" type="hidden" />
                            <input asp-for="Email" type="hidden" />
                            <div class="form-account-title">تغییر</div>
                            <div class="form-account-row">
                                <label class="input-label">
                                    <i class="now-ui-icons ui-1_lock-circle-open"></i>
                                </label>
                                <input asp-for="Password" class="input-field" type="password"
                                       placeholder="رمز عبور  خود را وارد نمایید">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-account-row">
                                <label class="input-label">
                                    <i class="now-ui-icons ui-1_lock-circle-open"></i>
                                </label>
                                <input asp-for="ConfirmPassword" class="input-field" type="password"
                                       placeholder="رمز عبور  خود را تکرار نمایید">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="form-account-row form-account-submit">
                                <div class="parent-btn">
                                    <button type="submit" class="dk-btn dk-btn-info">
                                        ثبت
                                        <i class="now-ui-icons arrows-1_refresh-69"></i>
                                    </button>
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>










