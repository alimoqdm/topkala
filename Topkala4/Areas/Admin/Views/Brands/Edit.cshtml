@model DataLayer.Brand

@{
    ViewData["Title"] = "Edit";
}

    <div class="card m-3 text-right fontiran ">
        <form asp-action="Edit">

            <div class="card-header">
                ویرایش برند
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BrandId" />
                <div class="form-group row">
                    <div class="col-12 col-lg-2">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-12 col-lg-10">
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                            <option> </option>
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12 col-lg-2">
                        <label asp-for="Value"></label>
                    </div>
                    <div class="col-12 col-lg-10">
                        <input asp-for="Value" class="form-control" />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>
                </div>


            </div>
            <div class="card-footer text-muted">
                <div class=" row">
                    <div class="col-6">
                        <div class="form-group">
                            <input type="submit" value="Edit" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-success btn-block">Back </a>
                        </div>
                    </div>
                </div>
            </div>


        </form>
    </div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
