@model DataLayer.Properties

@{
    ViewData["Title"] = "Edit";
}

    <div class="card m-3 text-right fontiran ">
        <form asp-action="Edit" asp-route-ProductId="@ViewBag.ProductId">

            <div class="card-header">
                ویرایش ویژگی ها
            </div>
            <div class="card-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId" />
                <input type="hidden" asp-for="PropertiesId"  />
                <div class="form-group row">
                    <div class="col-12 col-lg-2">
                        <label asp-for="Title"></label>
                    </div>
                    <div class="col-12 col-lg-10">
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12 col-lg-2">
                        <label asp-for="Value"></label>
                    </div>
                    <div class="col-12 col-lg-10">
                        <input asp-for="Value" class="form-control" />
                        <span asp-validation-for="Value" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="card-footer text-muted">
                <div class=" row">
                    <div class="col-6">
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary btn-block" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <a asp-action="PropList" asp-route-id="@ViewBag.ProductId" class="btn btn-success btn-block">Back </a>
                        </div>
                    </div>
                </div>
            </div>


        </form>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
