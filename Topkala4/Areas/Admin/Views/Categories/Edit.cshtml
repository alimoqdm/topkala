@model DataLayer.Category

@{
    ViewData["Title"] = "Edit";
}

<div class="card m-3 text-right fontiran ">
    <form asp-action="Edit">

        <div class="card-header">
            ویرایش دسته بندی
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CategoryId" />
            <div class="form-group row">
                <div class="col-12 col-lg-2">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-12 col-lg-10">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 col-lg-2">
                    <label asp-for="Level"></label>
                </div>
                <div class="col-12 col-lg-10">
                    <select asp-for="Level" class="form-control" asp-items="Html.GetEnumSelectList<Level>()">
                        <option> </option>
                    </select>
                    <span asp-validation-for="Level" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 col-lg-2">
                    <label asp-for="ParentId"></label>
                </div>
                <div class="col-12 col-lg-10">
                    <select asp-for="ParentId" class="form-control" asp-items="ViewBag.ParentId">
                        <option value=""> انتخاب </option>
                    </select>
                    <span asp-validation-for="ParentId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            <div class=" row">
                <div class="col-6">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary btn-block" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-success btn-block">Back </a>
                    </div>
                </div>
            </div>
        </div>


    </form>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
