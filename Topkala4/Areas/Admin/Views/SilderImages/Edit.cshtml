@model DataLayer.SilderImage

@{
    ViewData["Title"] = "Edit";
}

<div class="card m-3 text-right fontiran ">
    <form asp-action="Edit" enctype="multipart/form-data">

        <div class="card-header">
            ویرایش عکس
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SilderId" />
            <div class="form-group row">
                <div class="col-12 col-lg-2">
                    <label asp-for="CategoryId"></label>
                </div>
                <div class="col-12 col-lg-5" style="max-width:250px;">
                    <img src="~/SliderImages/@Model.Image" class="img-thumbnail img-fluid" />
                </div>
                <div class="col-12 col-lg-5">
                    <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId">
                        <option> </option>
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-12 col-lg-2">
                    <label asp-for="Image"></label>
                </div>
                <div class="col-12 col-lg-10">
                    <input type="file" name="imgsUp" class="form-control border-Cus" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="card-footer text-muted">
            <div class=" row">
                <div class="col-6">
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary btn-block" />
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <a asp-action="Index" class="btn btn-success btn-block">Back </a>
                    </div>
                </div>
            </div>
        </div>


    </form>
</div>



<style>
    .border-Cus {
        border: 0px solid #8F8F8F;
    }
</style>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
